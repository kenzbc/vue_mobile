/*弹出*/
.choose_player .other {
  top: 90px;
  background: rgba(0, 0, 0, 0);
}

.choose_player .dialog .dialog_bj {
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
}

.dialog_choose {
  position: absolute;
  top: 0;
  width: 100%;
  background: #fff;
}

.dialog_choose_header {
  line-height: 80px;
  overflow: hidden;
  padding-left: 24px;
  border-bottom: 1px solid #eeeeee;
}

.dialog_choose_header p {
  font-size: 28px;
  color: #3a3d44;
}

.dialog_choose_header .right {
  overflow: hidden;
}

.dialog_choose_header .flr p {
  margin-top: 22px;
  line-height: 34px;
  margin-right: 22px;
}

.dialog_choose_header .dialog_checkbox {
  margin-left: 22px;
}

.dialog_choose_list {
  overflow: hidden;
  border-bottom: 1px solid #eeeeee;
}

.dialog_choose_list p {
  text-align: center;
}

.dialog_choose_match {
  width: 630px;
  padding: 20px 40px 24px;
  overflow: hidden;
}

.dialog_choose_match .team_a, .dialog_choose_match .team_b {
  width: 164px;
}

.dialog_choose_match .team_a p:first-Child, .dialog_choose_match .team_b p:first-Child {
  height: 84px;
  overflow: hidden;
  position: relative;
}

.dialog_choose_match .team_vs {
  width: 218px;
  padding-top: 46px;
}

.dialog_choose_match .team_vs p {
  color: #3a3d44;
}

.dialog_choose_match .team_vs p:first-Child {
  font-size: 36px;
  font-weight: bold;
  height: 28px;
  line-height: 28px;
  margin-bottom: 4px;
}

.dialog_choose_match .team_a p img, .dialog_choose_match .team_b p img {
  position: absolute;
  width: 84px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

}

.dialog_choose_list .right {
  margin-top: 56px;
  margin-right: 24px;
}

.dialog_checkbox {
  display: block;
  width: 36px;
  height: 36px;
  border-radius: 4px;
  border: 2px solid #0C9DFC;
}

.dialog_checkbox i {
  margin-left: 5px;
}

.dialog_choose_footer {
  padding: 24px;
  overflow: hidden;
}

.dialog_choose_footer p {
  width: 170px;
  line-height: 70px;
  font-size: 30px;
  color: #fff;
  background: #0C9DFC;
  border-radius: 35px;
  text-align: center;
}

/*导航*/
.choose_player ~ .nav-bar {
  display: none;
}

.choose_nav {
  position: fixed;
  top: 90px;
  width: 580px;
  left: 170px;
}

.choose_nav ul {

}

.choose_nav li {
  background: #fff;
  width: 50%;
  line-height: 79px;
  text-align: center;
  border-bottom: 1px solid #eeeeee;
}

.choose_nav li p {
  font-size: 30px;
  color: #3a3d44;
}

.choose_filter_tab {
  position: relative;
}

.choose_filter_tab label {
  font-size: 30px;
}

.choose_filter_tab label i {
  display: block;
  position: absolute;
  top: -7px;
  right: 80px;
  height: 12px;
  font-size: 16px;
  color: #c9c9c9;
}

.choose_filter_tab label .bottom {
  top: 10px;
}

.choose_filter_tab label i.arrow_active {
  color: #0C9DFC;
}

.choose_player {
  font-size: 24px;
  overflow: hidden;
}

.choose_player ~ .nav-bar {
  display: none;
}

.choose_tabs {
  position: fixed;
  top: 90px;
  left: 0;
  width: 170px;
}

.choose_tabs li {
  width: 170px;
  border-left: 8px solid #f1f1f1;
  height: 132px;
  /*position: relative;*/
}

.choose_tabs li p:first-Child {
  padding-top: 30px;
}

.choose_tabs li p {
  text-align: center;
  font-size: 26px;
  color: #999999;
}

.choose_tabs li p .icon {
  width: 34px;
  height: 34px;
}

.choose_tabs li.active {
  background: #fff;
  border-left: 8px solid #0C9DFC;
}

.choose_tabs li.active p {
  color: #444444;
}

/*内容*/
.choose_contents {
  position: absolute;
  top: 170px;
  left: 170px;
  bottom: 140px;
  width: 578px;
  background: #fff;
  /*width: calc(100% - 170px);*/
  overflow-y: scroll;
  /*display: table;*/
  border-collapse: collapse;
  z-index: -1;
}

.choose_contents_nav {
  line-height: 60px;
  border-bottom: 1px solid #eeeeee;
}

.choose_on_add {
  width: 40px;
  height: 40px;
  line-height: 42px;
  border-radius: 50%;
  border: 2px solid #0C9DFC;
  //text-align: center;
  color: #fff;
  margin: 0 auto;
  position: relative;
}

.choose_on_add i {
  //display: inline-block;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: #0C9DFC;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

