.choose_team_avatar {
  position: relative;
  /*margin:10px;*/
  min-height: 149px;
  overflow: hidden;
}

.choose_team_avatar img {
  width: 100%;
}

.choose_team_logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 192px;
  height: 150px;
}

.choose_team_avatar .avatar {
  position: absolute;
  top: 0;
  left: 0;
