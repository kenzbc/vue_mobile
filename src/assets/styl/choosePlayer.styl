}

.choose_team_dec {
  text-align: left;
  width: 150px;
  overflow: hidden;
}

.choose_team_dec p {
  line-height: 30px;
}

.choose_team_dec p:first-Child {
  font-size: 28px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.choose_team_dec .vs_more_than{
  position: absolute;
  right:20px;
  bottom:25px;
  font-size:16px;
  color:#999;
}
.choose_team_dec .vs_more_than span{
  color:#0C9DFC;
  font-size:16px;
  margin:0 3px;
}
.choose_sraw_line {
  position: relative;
}

.choose_sraw_line p {
  position: absolute;
  bottom: 10px;
  width: 100%;
  left: 50%;
  transform: translate(-50%, 0);
  font-size: 18px;
  color: #373a41;
}

.choose_color_orange {
  font-size: 28px;
  color: #d2be85;
  display: inline-block;
