}

/*表格*/
.table, .table * {
  padding: 0;
  /*font-family: Arial, 宋体, Helvetica, sans-serif;*/
}

.table {
  display: table;
  width: 100%;
  border-collapse: collapse;
}

.table-tr {
  display: table-row;
  border-bottom: 1px solid #ccba87;
}

.table-th {
  display: table-cell;
  height: 100%;
  text-align: center;
  vertical-align: middle;
}

.table-td {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
  overflow: hidden;
  margin-right: 6px;
}
.table-td.vs_more_father{
  position: relative;
}
